                    </div>
                    <h2 class="card__title">Técnicas de amostragem</h2>
                    <div class="card__action-bar">
                        <a href="@Url.Action("Index", "AleatoriaSimples")" class="card__button btnMaterial">Aleatória</a>
                        <a href="@Url.Action("Index", "EstratificadaUniforme")" class="card__button btnMaterial">Uniforme</a>
                        <a href="@Url.Action("Index", "EstratificadaProporcional")" class="card__button btnMaterial">Proporcional</a>
