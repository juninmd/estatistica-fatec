@{
     Layout = "~/Views/Shared/_Layout.cshtml";
 }
<div class="container">

    <fieldset>
        <div class="row">
            <div class="col-sm-6">

                <div class="card card--big">
                    <div class="card__image" style="text-align: center; background-color: rgba(0, 0, 0, 0.8);">
