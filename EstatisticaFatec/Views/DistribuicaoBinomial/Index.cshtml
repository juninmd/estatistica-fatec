@using EstatisticaFatec.Helper
@model EstatisticaFatec.Core.Models.DistribuicaoBinomial.DistribuicaoBinomialEntity

@{
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}


@if (Model.N == 0)
{
    <div class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <strong>Você ainda não preencheu os paramêtros! Por favor, preencha os paramêtros.</strong>
    </div>
}

@section opcoes
{
    <li>
        <a class="btn-floating" title="Informações" data-toggle="modal" data-target="#myModal">
            <i class="glyphicon glyphicon-book" aria-hidden="true"></i>
        </a>
    </li>
}

<div class="well bs-component">
    <fieldset>
        <legend>Distribuição Normal</legend>
        <div class="form-group">


            <div class="col-xs-12">
                <blockquote class="small">
                    A distribuição normal conhecida também como distribuição gaussiana é sem dúvida a mais importante distribuição contínua. Sua importância se deve a vários fatores, entre eles podemos citar o teorema central do limite, o qual é um resultado fundamental em aplicações práticas e teóricas, pois ele garante que mesmo que os dados não sejam distribuídos segundo uma normal a média dos dados converge para uma distribuição normal conforme o número de dados aumenta.
                </blockquote>
            </div>
        </div>
    </fieldset>

</div>

<div class="well bs-component">
    <form class="form-horizontal" method="post" action="@Url.Action("Index")">
        <fieldset>
            <legend>Parametrização</legend>

            @if (@Html.ViewData.ModelState.IsValid == false)
            {
                <div class="alert alert-warning alert-dismissable" style="background-color: #610883;">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <div class="row-action-primary">
                        <i class="material-icons" style="color: white;float: left;">error</i>
                    </div>
                    <strong>@Html.ValidationMessage("error")</strong>
                </div>
            }
            <div class="form-group">
                <label class="col-md-2 control-label" title="Quantidade de Itens">N</label>

                <div class="col-md-3">
                    <input class="form-control" required placeholder="@Html.Null(Model.N)" value="@Html.Null(Model.N)" name="N" type="text">
                </div>

                <label class="col-md-2 control-label" title="Quantidade do Sucesso">P</label>

                <div class="col-md-3">
                    <input class="form-control" required placeholder="@Html.Null(Model.PInput)" value="@Html.Null(Model.PInput)" name="PInput" type="text">
                </div>
            </div>

            <div class="col-md-4 col-md-offset-2 form-inline">
                <div class="radio">
                    <label>
                        <input type="radio" class="radio-inline" name="TipoEntrada" required="" value="0">
                        Menor
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" class="radio-inline" name="TipoEntrada" required="" value="1" />
                        Exatamente
                    </label>
                    <div class="radio">
                        <label>
                            <input type="radio" class="radio-inline" name="TipoEntrada" required="" value="2" />
                            Maior
                        </label>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-md-offset-2 form-inline">
                <div class="radio">
                    <label>
                        <input type="radio" class="radio-inline" name="InputSemDefeito" required="" value="true">
                        Sucesso
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" class="radio-inline" name="InputSemDefeito" required="" value="false" />
                        Erro
                    </label>
                </div>
            </div>

            <div class="col-md-12">

                <div class="form-group">

                    <label class="col-md-2 control-label">X:</label>
                    <div class="col-md-3">
                        <input class="form-control" required placeholder="@Html.Null(Model.KInput)" name="KInput" type="text">
                    </div>

                </div>
            </div>

            <div class="col-md-10 col-md-offset-2">
                <button type="reset" class="btn btn-danger">Limpar</button>
                <button type="submit" class="btn btn-primary">
                    Enviar
                    <div class="ripple-container"></div>
                </button>
            </div>


            <div class="col-md-12">

                <div class="form-group">

                    @if (Model.KInput != 0)
                    {
                        <hr>

                        <label class="col-md-1 control-label">P:</label>
                        <div class="col-md-3">
                            <input class="form-control" value="@Html.Null(Model.P)" type="text">
                        </div>

                        <label class="col-md-1 control-label">Q:</label>
                        <div class="col-md-3">
                            <input class="form-control" value="@Html.Null(Model.Q)" type="text">
                        </div>


                        <label class="col-md-1 control-label">K:</label>
                        <div class="col-md-3">
                            <input class="form-control" value="@string.Join(", ", new { @Model.K, Model.KProbabilidade })" type="text">
                        </div>

                    }
                </div>
            </div>

        </fieldset>
    </form>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("input[name=TipoEntrada]").prop("checked", false);
            $("input[name=TipoEntrada][value=@Model.TipoEntrada]").prop("checked", true);

            $("input[name=InputSemDefeito]").prop("checked", false);
            $("input[name=InputSemDefeito][value=@Model.InputSemDefeito]").prop("checked", true);
        });
    </script>
}
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Entendendo as etapas</h4>
            </div>
            <div class="modal-body">

            </div>
        </div>
    </div>
</div>

