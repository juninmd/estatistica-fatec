@model EstatisticaFatec.Core.Models.VariavelContinua.VariavelContinuaContainerEntity

@{
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}

@if (Model.InputValue.Any() == false)
{
    @Html.Partial("_AlertaParametros")
}

<div class="well bs-component">
    <fieldset>
        <legend>Varíavel Contínua</legend>
        <div class="form-group">
            <div class="col-xs-12">
                <blockquote class="small">
                    Uma amostra aleatória simples é usar um subconjunto de indivíduos (amostra) apartir de um conjunto maior (população) por um processo que garanta que
                    <ul>
                        <li>
                            Todos os indivíduos da população têm a mesma probabilidade de ser escolhidos para a amostra;
                        </li>
                    </ul>
                    <small class="pull-right">
                        Sorteamos uma quantidade de números X [AMOSTRA] entre um total de população de Y [POPULAÇÃO]
                    </small>

                </blockquote>
            </div>
        </div>
    </fieldset>
</div>




<form method="POST" action="@Url.Action("Index")">
    @Html.Partial("_Input")
</form>

@if (Model.InputValue.Any())
{
    @Html.Partial("_Rol")

    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="row">

                <div class="col-md-4">
                    <span class="badge">4ª Etapa</span>
                    <span class="info">Distribuição de Frequência</span>
                </div>
            </div>
        </div>

        <div class="panel-body">
            <div class="row-content">

                <div class="list-group">
                    <div class="list-group-item">

                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th title="Classes">Classes</th>
                                    <th title="De x até y">Range</th>
                                    <th title="Frequência simples">[FI]</th>
                                    <th title="Frequência relativa percentual ">[FE%]</th>
                                    <th title="Frequência Acumulada">[F]</th>
                                    <th title="Frequência Acumulada porcentual">[F%]</th>
                                    <th title="XI">[XI]</th>
                                    <th title="Média">[XI * FI]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.VariavelContinuaEntity)
                                {
                                    <tr>
                                        <td>@item.Classe</td>
                                        <td>@item.Range[0]|-------@item.Range[1]</td>
                                        <td>@item.FI</td>
                                        <td>@item.FEPorcent%</td>
                                        <td>@item.F</td>
                                        <td>@item.FPorcent%</td>
                                        <td>@item.XI</td>
                                        <td>@item.XIFI</td>
                                    </tr>
                                }
                                <tr style="font-weight: bold">
                                    <td>@Model.VariavelContinuaEntity.Select(x => x.Classe).Count()</td>
                                    <td>@Model.IC.IC</td>
                                    <td>@Model.VariavelContinuaEntity.Select(x => x.FI).Sum()</td>
                                    <td>@Model.VariavelContinuaEntity.Select(x => x.FEPorcent).Sum()</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td>@Model.VariavelContinuaEntity.Select(x => x.XIFI).Sum()</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>






    @Html.Partial("_MedidasTendencia", Model.MedidasTendenciaEntity)

    @Html.Partial("_MedidasDispersao", Model.MedidasDispersaoEntity)

    <div class="panel panel-info">
        <div class="panel-heading">
            <span class="badge">5ª Etapa</span>
            <span class="info">Administramos assim os gráficos.</span>
        </div>

        <div class="panel-body">
            <div class="row-content">

                <div class="list-group">
                    <div class="list-group-item" style="text-align:center">
                        <div id="container" style="min-width: 310px; max-width: 800px; height: 400px; margin: 0 auto"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>







    @section scripts{
        <script src="~/Scripts/highcharts.js"></script>
        <script>

            $(function () {
                $('#container').highcharts({
                    chart: {
                        type: 'bar'
                    },
                    title: {
                        text: 'Varíavel contínua'
                    },
                    subtitle: {
                        text: 'Descrição dos dados'
                    },
                    xAxis: {
                        categories: ['@string.Join(", ", @Model.VariavelContinuaEntity.Select(q=> q.Classe))'],
                        title: {
                            text: "Classes"
                        }
                    },
                    yAxis: {
                        min: 0,
                        title: {
                            text: 'Porcentagem',
                            align: 'high'
                        },
                        labels: {
                            overflow: 'justify'
                        }
                    },
                    tooltip: {
                        valueSuffix: ' de frequência'
                    },
                    plotOptions: {
                        bar: {
                            dataLabels: {
                                enabled: true
                            }
                        }
                    },
                    legend: {
                        layout: 'vertical',
                        align: 'right',
                        verticalAlign: 'top',
                        x: -40,
                        y: 80,
                        floating: true,
                        borderWidth: 1,
                        backgroundColor: ((Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'),
                        shadow: true
                    },
                    credits: {
                        enabled: false
                    },
                    series: [
                        {
                            name: 'F%',
                            data: ['@string.Join(", ", @Model.VariavelContinuaEntity.Select(q => Math.Round(q.FPorcent)))']
                        },
                        {
                            name: 'FE%',
                            data: ['@string.Join(", ", @Model.VariavelContinuaEntity.Select(q => Math.Round(q.FEPorcent)))']
                        }
                    ]
                });
            });
        </script>
    }

}

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <p>Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>