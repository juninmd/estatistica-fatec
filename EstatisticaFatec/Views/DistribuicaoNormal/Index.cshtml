@using EstatisticaFatec.Helper
@model EstatisticaFatec.Core.Models.DistribuicaoNormal.DistribuicaoNormalEntity

@{
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}

@if (Model.TipoEntrada == 0)
{
    <div class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <strong>Você ainda não preencheu os paramêtros! Por favor, preencha os paramêtros.</strong>
    </div>
}

@section opcoes
{
    <li>
        <a class="btn-floating" title="Informações" data-toggle="modal" data-target="#myModal">
            <i class="glyphicon glyphicon-book" aria-hidden="true"></i>
        </a>
    </li>
}

<div class="well bs-component">
    <fieldset>
        <legend>Distribuição Normal</legend>
        <div class="form-group">


            <div class="col-xs-12">
                <blockquote class="small">
                    Uma amostra aleatória simples é usar um subconjunto de indivíduos (amostra) apartir de um conjunto maior (população) por um processo que garanta que
                    <ul>
                        <li>
                            Todos os indivíduos da população têm a mesma probabilidade de ser escolhidos para a amostra;
                        </li>
                    </ul>
                    <small class="pull-right">
                        Sorteamos uma quantidade de números X [AMOSTRA] entre um total de população de Y [POPULAÇÃO]
                    </small>

                </blockquote>
            </div>
        </div>
    </fieldset>

</div>

<div class="well bs-component">
    <form class="form-horizontal" method="post" action="@Url.Action("Index")">
        <fieldset>
            <legend>Parametrização</legend>

            @if (@Html.ViewData.ModelState.IsValid == false)
            {
                <div class="alert alert-warning alert-dismissable" style="background-color: #610883;">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <div class="row-action-primary">
                        <i class="material-icons" style="color: white;float: left;">error</i>
                    </div>
                    <strong>@Html.ValidationMessage("error")</strong>
                </div>
            }
            <div class="form-group">
                <label class="col-md-2 control-label">Desvio Padrão</label>

                <div class="col-md-3">
                    <input class="form-control" required placeholder="@Html.Null(Model.DesvioPadrao)" name="DesvioPadrao" type="number">
                </div>

                <label class="col-md-2 control-label">Média Ponderada</label>

                <div class="col-md-3">
                    <input class="form-control" required placeholder="@Html.Null(Model.MediaPonderada)" name="MediaPonderada" type="number">
                </div>
            </div>

            <div class="col-md-10 col-md-offset-2 form-inline">
                <div class="radio">
                    <label>
                        <input type="radio" class="radio-inline"  name="TipoEntrada" required=""  value="0">
                        Menor
                    </label>
                </div>
                <div class="radio">
                    <label>
                        <input type="radio" class="radio-inline"  name="TipoEntrada" required="" value="1" />
                        Entre
                    </label>
                    <div class="radio">
                        <label>
                            <input type="radio" class="radio-inline" name="TipoEntrada" required="" value="2" />
                            Maior
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">

                <div id="divValorA">
                    <label class="col-md-2 control-label">X:</label>
                    <div class="col-md-3">
                        <input class="form-control" required placeholder="@Html.Null(Model.Valor[0])" name="ValorA" type="number">
                    </div>
                </div>

                <div id="divValorB" @(Model.TipoEntrada != 1 ? "style=display:none" : "")>
                    <label class="col-md-2 control-label">Y:</label>
                    <div class="col-md-3">
                        <input class="form-control"  @(Model.TipoEntrada != 1 ? "required" : "") placeholder="@Html.Null(Model.Valor[1])" name="ValorB" type="number">
                    </div>
                </div>
            </div>

            <div class="col-md-10 col-md-offset-2">
                <button type="reset" class="btn btn-danger">Limpar</button>
                <button type="submit" class="btn btn-primary">Enviar<div class="ripple-container"></div></button>
            </div>

        </fieldset>
    </form>
</div>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("input[name=TipoEntrada]").prop("checked", false);
            $("input[name=TipoEntrada][value=@Model.TipoEntrada]").prop("checked", true);
        });
        $("input[name=TipoEntrada]").change(function () {
            if ($(this).val() != 1) {
                $("#divValorB").hide();
                $("input[name=ValorB]").removeAttr("required");
            } else {
                $("#divValorB").show();
                $("input[name=ValorB]").attr("required", "required");
            }
        });

    </script>
}

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Entendendo as etapas</h4>
            </div>
            <div class="modal-body">

                <fieldset>
                    <legend> Coletando paramêtros <span class="lesssmall pull-right">A população deve ser maior que a amostra.</span></legend>




                </fieldset>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>

    </div>
</div>
