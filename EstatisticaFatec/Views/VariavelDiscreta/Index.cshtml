@using EstatisticaFatec.Helper
@model EstatisticaFatec.Core.Models.VariavelDiscreta.VariavelDiscretaContainerEntity

@{
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}


@if (Model.InputValue.Any() == false)
{
    @Html.Partial("_AlertaParametros")
}


<div class="well bs-component">
    <fieldset>
        <legend>Aleatória Simples</legend>
        <div class="form-group">
            <div class="col-xs-12">
                <blockquote class="small">
                    Uma amostra aleatória simples é usar um subconjunto de indivíduos (amostra) apartir de um conjunto maior (população) por um processo que garanta que
                    <ul>
                        <li>
                            Todos os indivíduos da população têm a mesma probabilidade de ser escolhidos para a amostra;
                        </li>
                    </ul>
                    <small class="pull-right">
                        Sorteamos uma quantidade de números X [AMOSTRA] entre um total de população de Y [POPULAÇÃO]
                    </small>

                </blockquote>
            </div>
        </div>
    </fieldset>
</div>

<form method="POST" action="@Url.Action("Index")">
    @Html.Partial("_Input")


</form>


@if (Model.InputValue.Any())
{

    @Html.Partial("_Rol")


    <div class="well bs-component">
        <fieldset>
            <legend>Toda informação é ordenada (Vulgo ROL)</legend>
            <div class="form-group">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th title="">
                                <div class="row-action-primary checkbox">
                                    <label><input type="checkbox" id="chkAll"></label>
                                </div>
                            </th>
                            <th title="Valor a ser calculado">[XI]</th>
                            <th title="Frequência simples">[FI]</th>
                            <th title="Frequência relativa percentual ">[FE%]</th>
                            <th title="Frequência Acumulada">[F]</th>
                            <th title="Frequência Acumulada porcentual">[F%]</th>
                            <th title="Média">[XI * FI]</th>
                            <th title="(XI - `X)². FI">(XI - `X)². FI</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.VariavelDiscretaEntity)
                        {
                            <tr>
                                <td>
                                    <div class="row-action-primary checkbox">
                                        <label><input checkGrid type="checkbox"></label>
                                    </div>
                                </td>
                                <td>@item.XI</td>
                                <td>@item.FI</td>
                                <td>@item.FEPorcent%</td>
                                <td>@item.F</td>
                                <td>@item.FPorcent%</td>
                                <td>@item.XIFI</td>
                                <td title="@item.XIFIQuadFI.Formula">@item.XIFIQuadFI.Valor%</td>
                            </tr>
                        }
                        <tr style="font-weight: bold">
                            <td>-</td>
                            <td>-</td>
                            <td>@Model.VariavelDiscretaEntity.Select(x => x.FI).Sum()</td>
                            <td>-</td>
                            <td>-</td>
                            <td></td>
                            <td>@Model.VariavelDiscretaEntity.Select(x => x.XIFI).Sum()</td>
                            <td>@Model.VariavelDiscretaEntity.Select(x => x.XIFIQuadFI.Valor).Sum()</td>
                        </tr>
                    </tbody>
                </table>


            </div>
        </fieldset>
    </div>


    @Html.Partial("_MedidasTendencia", Model.MedidasTendenciaEntity)

    @Html.Partial("_MedidasDispersao", Model.MedidasDispersaoEntity)

    <div class="well bs-component">
        <fieldset>
            <legend>Administramos assim os gráficos</legend>
            <div class="form-group">

                <div id="container" style="min-width: 310px; max-width: 800px; height: 400px; margin: 0 auto"></div>
            </div>
        </fieldset>
    </div>






    @section scripts{

        <script>

            $(function () {
                $('#container').highcharts({
                    chart: {
                        type: 'bar'
                    },
                    title: {
                        text: 'Varíavel discreta'
                    },
                    subtitle: {
                        text: 'Descrição dos dados'
                    },
                    xAxis: {
                        categories: [@Html.FormatacaoObjeto(Model.VariavelDiscretaEntity.Select(p=> p.XI).ToList())],
                        title: {
                            text: "Classes"
                        }
                    },
                    yAxis: {
                        min: 0,
                        title: {
                            text: 'Porcentagem',
                            align: 'high'
                        },
                        labels: {
                            overflow: 'justify'
                        }
                    },
                    tooltip: {
                        valueSuffix: ' de frequência'
                    },
                    plotOptions: {
                        bar: {
                            dataLabels: {
                                enabled: true
                            }
                        }
                    },
                    legend: {
                        layout: 'vertical',
                        align: 'right',
                        verticalAlign: 'top',
                        x: -40,
                        y: 80,
                        floating: true,
                        borderWidth: 1,
                        backgroundColor: ((Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'),
                        shadow: true
                    },
                    credits: {
                        enabled: false
                    },
                    series: [
                        {
                            name: 'FI',
                            data: [@Html.FormatacaoObjeto(Model.VariavelDiscretaEntity.Select(q=> q.FI).ToList())]
                        },
                         {
                             name: 'FE%',
                             data: [@Html.FormatacaoObjeto(Model.VariavelDiscretaEntity.Select(q=> q.FEPorcent).ToList())]
                         },
                          {
                              name: 'F',
                              data: [@Html.FormatacaoObjeto(Model.VariavelDiscretaEntity.Select(q=> q.F).ToList())]
                          },
                           {
                               name: 'F%',
                               data: [@Html.FormatacaoObjeto(Model.VariavelDiscretaEntity.Select(q=> q.FPorcent).ToList())]
                           },
                            {
                                name: 'XI*FI%',
                                data: [@Html.FormatacaoObjeto(Model.VariavelDiscretaEntity.Select(q=> q.XIFIQuadFI.Valor).ToList())]
                            },
                    ]
                });
            });
        </script>
    }
}

