@using EstatisticaFatec.Helper
@model EstatisticaFatec.Core.Models.VariavelQuantitativa.VariavelDiscretaContainerEntity

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.InputValue.Any() == false)
{
    <div class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <strong>Você ainda não preencheu os paramêtros! Por favor, preencha os paramêtros.</strong>
    </div>
}

<div class="fixed-action-btn" data-toggle="modal" data-target="#myModal" title="Entendendo a metodologia">
    <a href="javascript:void(0)" class="btn btn-warning btn-fab">
        <i class="material-icons">reorder</i>
        <div class="ripple-container"></div>
    </a>
</div>

<div class="well bs-component">
    <fieldset>
        <legend>Aleatória Simples</legend>
        <div class="form-group">
            <div class="col-xs-12">
                <blockquote class="small">
                    Uma amostra aleatória simples é usar um subconjunto de indivíduos (amostra) apartir de um conjunto maior (população) por um processo que garanta que
                    <ul>
                        <li>
                            Todos os indivíduos da população têm a mesma probabilidade de ser escolhidos para a amostra;
                        </li>
                    </ul>
                    <small class="pull-right">
                        Sorteamos uma quantidade de números X [AMOSTRA] entre um total de população de Y [POPULAÇÃO]
                    </small>

                </blockquote>
            </div>
        </div>
    </fieldset>
</div>



<form method="POST" action="@Url.Action("Index")">
    <div class="panel panel-info">
        <div class="panel-heading">
            <span class="badge">1ª Etapa</span>
            <span class="info">Efetuamos a coleta de todos os dados.</span>
        </div>

        <div class="panel-body">
            <div class="row-content">

                <div class="form-group">
                    <div class="form-group label-floating">
                        <label class="control-label">Insira os valores</label>
                        <textarea name="massaDados" required="" placeholder="@string.Join("; ", @Model.InputValue)" class="form-control" rows="6" style="min-width: 100%" id="txtParametros"></textarea>
                        <span class="help-block"><span class="badge">Preencha todos os paramêtros, separados por ponto e vírgula ";" e caso algum seja decimal, utilize ","</span></span>
                    </div>
                </div>


                <div class="btn-group pull-right">
                    <a href="@Url.Action("Index","Home")" class="btn btn-default">Voltar</a>
                    <input class="btn btn-danger" value="Limpar" type="reset">
                    <input class="btn btn-warning" onclick="formatarInput()" value="Formatar Inputs" type="button">
                    <input class="btn btn-success" value="Enviar" type="submit">
                </div>

            </div>
        </div>
    </div>
</form>

@if (Model.InputValue.Any())
{
    <div class="panel panel-info">
        <div class="panel-heading">
            <span class="badge">2ª Etapa</span>
            <span class="info">Toda informação é ordenada (Vulgo ROL).</span>
        </div>

        <div class="panel-body">
            <div class="row-content">

                <div class="list-group">
                    <div class="list-group-item" style="text-align: center">
                        <p>Resultados: <span>@Html.Rol(Model.Rol)</span></p>
                    </div>
                    <div class="list-group-item" style="text-align: center">
                        <p><span>@Html.Grupos(Model.Rol)</span></p>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="panel panel-info">
        <div class="panel-heading">
            <div class="row">

                <div class="col-md-5">
                    <span class="badge">3ª Etapa</span>
                    <span class="info">Organizamos a coleta de dados</span>
                </div>

                <div class="col-md-4">
                    <span class="badge">4ª Etapa</span>
                    <span class="info">Distribuição de Frequência</span>
                </div>

            </div>
        </div>

        <div class="panel-body">
            <div class="row-content">

                <div class="list-group">
                    <div class="list-group-item">

                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th title="">
                                        <div class="row-action-primary checkbox">
                                            <label><input type="checkbox" id="chkAll"></label>
                                        </div>
                                    </th>
                                    <th title="Valor a ser calculado">[XI]</th>
                                    <th title="Frequência simples">[FI]</th>
                                    <th title="Frequência relativa percentual ">[FE%]</th>
                                    <th title="Frequência Acumulada">[F]</th>
                                    <th title="Frequência Acumulada porcentual">[F%]</th>
                                    <th title="Média">[XI * FI]</th>
                                    <th title="(XI - `X)². FI">(XI - `X)². FI</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.VariavelQuantitativaEntity)
                                {
                                    <tr>
                                        <td>
                                            <div class="row-action-primary checkbox">
                                                <label><input checkGrid type="checkbox"></label>
                                            </div>
                                        </td>
                                        <td>@item.XI</td>
                                        <td>@item.FI</td>
                                        <td>@item.FEPorcent%</td>
                                        <td>@item.F</td>
                                        <td>@item.FPorcent%</td>
                                        <td>@item.XIFI</td>
                                        <td title="@item.XIFIQuadFI.Formula">@item.XIFIQuadFI.Valor%</td>
                                    </tr>
                                }
                                <tr style="font-weight: bold">
                                    <td>-</td>
                                    <td>-</td>
                                    <td>@Model.VariavelQuantitativaEntity.Select(x => x.FI).Sum()</td>
                                    <td>-</td>
                                    <td>-</td>
                                    <td></td>
                                    <td>@Model.VariavelQuantitativaEntity.Select(x => x.XIFI).Sum()</td>
                                    <td>@Model.VariavelQuantitativaEntity.Select(x => x.XIFIQuadFI.Valor).Sum()</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-info">
        <div class="panel-heading">
            <span class="badge">4ª Etapa</span>
            <span class="info">Medidas de tendência central / Medidas de Dispersao.</span>
        </div>

        <div class="panel-body">
            <div class="row-content">

                <div class="form-group">

                    <label class="col-md-1 control-label">Moda</label>
                    <div class="col-md-2">
                        <input class="form-control" readonly="" value="@Html.Moda(Model.Moda)">
                    </div>

                    <label class="col-md-1 control-label">Média</label>
                    <div class="col-md-2">
                        <input class="form-control" readonly="" value="@Model.Media">
                    </div>


                    <label class="col-md-1 control-label">Mediana</label>
                    <div class="col-md-2">
                        <input class="form-control" readonly="" value="@Model.Mediana">
                    </div>

                </div>

            </div>
        </div>
    </div>


    <div class="panel panel-info">
        <div class="panel-heading">
            <span class="badge">4ª Etapa</span>
            <span class="info">Medidas de Dispersão.</span>
        </div>

        <div class="panel-body">
            <div class="row-content">

                <div class="form-group">

                    <label class="col-md-1 control-label">Variância</label>
                    <div class="col-md-1">
                        <input class="form-control" readonly="" value="@Model.Variancia">
                    </div>

                    <label class="col-md-2 control-label">Desvio Padrão</label>
                    <div class="col-md-1">
                        <input class="form-control" readonly="" value="@Model.DP">
                    </div>

                    <label class="col-md-2 control-label">Coeficiente da variação</label>
                    <div class="col-md-1">
                        <input class="form-control" readonly="" value="@Model.CV%">
                    </div>

                </div>

            </div>
        </div>
    </div>




    <div class="panel panel-info">
        <div class="panel-heading">
            <span class="badge">6ª Etapa</span>
            <span class="info">Administramos assim os gráficos.</span>
        </div>

        <div class="panel-body">
            <div class="row-content">

                <div class="list-group">
                    <div class="list-group-item" style="text-align: center">
                        <div id="container" style="min-width: 310px; max-width: 800px; height: 400px; margin: 0 auto"></div>
                    </div>
                </div>

            </div>
        </div>
    </div>






    @section scripts{

        <script>

            $(function () {
                $('#container').highcharts({
                    chart: {
                        type: 'bar'
                    },
                    title: {
                        text: 'Varíavel discreta'
                    },
                    subtitle: {
                        text: 'Descrição dos dados'
                    },
                    xAxis: {
                        categories: [@Html.FormatacaoObjeto(Model.VariavelQuantitativaEntity.Select(p=> p.XI).ToList())],
                        title: {
                            text: "Classes"
                        }
                    },
                    yAxis: {
                        min: 0,
                        title: {
                            text: 'Porcentagem',
                            align: 'high'
                        },
                        labels: {
                            overflow: 'justify'
                        }
                    },
                    tooltip: {
                        valueSuffix: ' de frequência'
                    },
                    plotOptions: {
                        bar: {
                            dataLabels: {
                                enabled: true
                            }
                        }
                    },
                    legend: {
                        layout: 'vertical',
                        align: 'right',
                        verticalAlign: 'top',
                        x: -40,
                        y: 80,
                        floating: true,
                        borderWidth: 1,
                        backgroundColor: ((Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'),
                        shadow: true
                    },
                    credits: {
                        enabled: false
                    },
                    series: [
                        {
                            name: 'FI',
                            data: [@Html.FormatacaoObjeto(Model.VariavelQuantitativaEntity.Select(q=> q.FI).ToList())]
                        },
                         {
                             name: 'FE%',
                             data: [@Html.FormatacaoObjeto(Model.VariavelQuantitativaEntity.Select(q=> q.FEPorcent).ToList())]
                         },
                          {
                              name: 'F',
                              data: [@Html.FormatacaoObjeto(Model.VariavelQuantitativaEntity.Select(q=> q.F).ToList())]
                          },
                           {
                               name: 'F%',
                               data: [@Html.FormatacaoObjeto(Model.VariavelQuantitativaEntity.Select(q=> q.FPorcent).ToList())]
                           },
                            {
                                name: 'XI*FI%',
                                data: [@Html.FormatacaoObjeto(Model.VariavelQuantitativaEntity.Select(q=> q.XIFIQuadFI.Valor).ToList())]
                            },
                    ]
                });
            });
        </script>
    }
}

